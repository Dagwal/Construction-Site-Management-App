            <% if (works.length > 0 ) { %>
              <table  id="example" class="table table-striped" style="width:100%">
                <thead>
                  <tr>
                    <th>Item Number</th>
                    <th>Building Component</th>
                    <th>Item Name</th>
                    <th>Unit</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Date</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% works.forEach(work => { %>
                    <tr>
                      <td><%= work.itemNumber %></td>
                      <td><%= work.buildingComponent %></td>
                      <td><%= work.itemName %></td>
                      <td><%= work.unit %></td>
                      <td><%= work.quantity %></td>
                      <td><%= work.unitPrice %></td>
                      <td><%= work.unitPrice * work.quantity %></td>
                      <th><%= work.date.toLocaleString({timeZone: 'Africa/Addis_Ababa'}) %></th>
                      <td><a href="/works/editworks/<%= work._id%>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/works/deleteworks/<%= work._id%>" class="btn btn-danger btn-sm">  delete</a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
