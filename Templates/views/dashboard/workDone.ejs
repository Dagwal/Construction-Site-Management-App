                  </svg>
                  <div>
                    <%= message %>
                  </div>
                </div>
              </div>
            <% } %>
            <div class="input-field">

                <div class="table-responsive">

                    <table class="table table-bordered text-center" id="table_field">

                        <tr>

                            

                            <th>item no.</th>

                            <th>buildingComponent</th>

                            <th>itemName</th>

                            <th>unit</th>

                            <th>quantity</th>

                            <th>unitPrice</th>

                            <th>Remove</th>

                        </tr>

                        <tr>

                            

                            <td class="itemnobox"><select class="form-control" name="itemNumber" required>
                              <% if(typeof ContractArchive !== 'undefined') { %>
                                <% ContractArchive.forEach(function(work) { %>
                                  <option class="form-control" value="<%= work.itemNumber %>"><%= work.itemNumber %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><select class="form-control" name="buildingComponent" required>
                              <% if(typeof ContractArchive !== 'undefined') { %>
                                <% ContractArchive.forEach(function(work) { %>
                                  <option class="form-control" value="<%= work.buildingComponent %>"><%= work.buildingComponent %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><select class="form-control" name="itemName" required>
                              <% if(typeof ContractArchive !== 'undefined') { %>
                                <% ContractArchive.forEach(function(work) { %>
                                  <option class="form-control" value="<%= work.itemName %>"><%= work.itemName %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><select class="form-control" name="unit" required>
                              <% if(typeof ContractArchive !== 'undefined') { %>
                                <% ContractArchive.forEach(function(work) { %>
                                  <option class="form-control" value="<%= work.unit %>"><%= work.unit %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><input class="form-control" name="quantity" required></td>

                            <td><select class="form-control" name="unitPrice" required>
                              <% if(typeof ContractArchive !== 'undefined') { %>
                                <% ContractArchive.forEach(function(work) { %>
                                  <option class="form-control" value="<%= work.unitPrice %>"><%= work.unitPrice %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><input class="btn btn-danger" name="remove" id="remove" value="Remove" type="button"></td>

                        </tr>

                    </table>

                    <div class="row">

                        <div class="col-12 text-right">

