    <%- include('./partials/header.ejs') %>
    <div class="container-fluid">
      <div class="row">
        
        <%- include('./partials/nav.ejs', { currentPageName: 'Material Inventory' }) %>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main">
          
          <form action="http://localhost:3000/api/materialinventory" method="post" class="insert-form ">
            <hr>
            <h1 class="text-center">Add Material Inventory</h1>

            <hr>

            <div class="input-field">

                <div class="table-responsive">

                    <table class="table table-bordered text-center" id="table_field">

                        <tr>

                            

                            <th>Item No.</th>

                            <th>Material Name</th>

                            <th>Material Type/Size</th>

                            <th>Mesuring Unit</th>

                            <th>Quantity</th>

                            <th>Price</th>

                            <th>Remove</th>

                        </tr>

                        <tr>

                            

                            <td class="itemnobox"><select class="form-control" name="itemNumber" required>
                              <% if(typeof materials !== 'undefined') { %>
                                <% materials.filter(material => material.materialName !== "").forEach(function(material) { %>
                                  <option class="form-control" value="<%= material.itemNumber %>"><%= material.itemNumber %></option>
                                <% }); %>
                             <% } %>
                            </select></td>

                            <td><select class="form-control" name="materialName" required>
                              <% if(typeof materials !== 'undefined') { %>
                                <% materials.filter(material => material.materialName !== "").forEach(function(material) { %>
                                  <option class="form-control" value="<%= material.materialName %>"><%= material.materialName %></option>
                                <% }); %>
                             <% } %>
                              
                            </select></td>

                            <td><select class="form-control" name="materialTypeSize" required>
                              <% if(typeof materials !== 'undefined') { %>
                                <% materials.filter(material => material.materialName !== "").forEach(function(material) { %>
                                  <option class="form-control" value="<%= material.materialTypeSize %>"><%= material.materialTypeSize %></option>
                                <% }); %>
                             <% } %>
                              
                            </select></td>

                            <td><select class="form-control" name="unitMesurment"  required>
                              <% if(typeof materials !== 'undefined') { %>
                                <% materials.filter(material => material.materialName !== "").forEach(function(material) { %>
                                  <option class="form-control" value="<%= material.mesuringUnit%>"><%= material.mesuringUnit %></option>
                                <% }); %>
                             <% } %>
                              
                            </select></td>
                              
                            </select></td>

                            <td><input type="number" class="form-control" name="quantity" required></td>
                            <td><input type="number" class="form-control" name="price" step="0.01" required></td>

                            <td><input class="btn btn-danger" name="remove" id="remove" value="Remove" type="button"></td>

                        </tr>

                    </table>

                    <div class="row">

                        <div class="col-12 text-right">

                            <input type="button" name="add" id="add" value="Add" class="btn btn-success">

                        </div>

                        <div class="col-12 m-3">

                          <input type="submit" name="save" id="save" value="Save" class="btn btn-primary btn-block">

                        </div>

                    </div>

                </div>

            </div>

        </form>
        <br>
          <div class="my-4 w-100" id="myChart" width="900" height="380"></div>

          <h2>Materials</h2>
          <div class="table-responsive">
            <% if (stockTable1Records.length > 0 ) { %>
              <table  id="example" class="table table-striped" style="width:100%">
                <thead>
                  <tr>
                    <th>Item Number</th>
                    <th>Material Name</th>
                    <th>Material Type/Size</th>
                    <th>Mesuring Unit</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total Price</th>
                    <th>Date</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% stockTable1Records.forEach(stock => { %>
                    <tr>
                      <td><%= stock.itemNumber %></td>
                      <td><%= stock.materialName %></td>
                      <td><%= stock.materialTypeSize %></td>
                      <td><%= stock.unitMesurment %></td>
                      <td><%= stock.quantity %></td>
                      <td><%= stock.price %></td>
                      <td><%= (stock.price * stock.quantity).toFixed(2)   %></td>
                      <td><%= stock.date.toLocaleString({timeZone: 'Africa/Addis_Ababa'}) %></td>
                      <td><a href="/materialinventory/editmaterialinventory/<%= stock._id%>" class="btn btn-primary">Edit</a>  <a href="/materialinventory/deletematerialinventory/<%= stock._id%>" class="btn btn-danger">Delete</a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } %>

            
          </div>
          <br>
          
          <div class="my-4 w-100" id="myChart" width="900" height="380"></div>

<br>
            <%
            const aggregatedQuantitiesByMaterialAndType = {};
            for (const stockTable1Record of stockTable1Records) {
              const materialName = stockTable1Record.materialName;
              const materialTypeSize = stockTable1Record.materialTypeSize;
              const quantity = stockTable1Record.quantity;
              const unitMesurment = stockTable1Record.unitMesurment;
              const price = stockTable1Record.price;
              const totalPrice = quantity * price;

              if (!aggregatedQuantitiesByMaterialAndType[materialName]) {
                aggregatedQuantitiesByMaterialAndType[materialName] = {};
              }

              if (!aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize]) {
                aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize] = {
                  quantity: 0,
                  totalPrice: 0,
                  unitMesurment,
                  price,
                };
              }

              aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].quantity += quantity;
              aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].totalPrice += totalPrice;
            }
            %>
            <h2>Material Inventory Summary</h2>
            <table id="example" class="table table-striped" style="width:100%">
              <thead>
                <tr>
                  <th>Material Name</th>
                  <th>Material Type/Size</th>
                  <th>Unit of Measurement</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Total Price</th>
                </tr>
              </thead>
              <tbody>
                <% for (const materialName in aggregatedQuantitiesByMaterialAndType) { %>
                  <% for (const materialTypeSize in aggregatedQuantitiesByMaterialAndType[materialName]) { %>
                    <tr>
                      <td><%= materialName %></td>
                      <td><%= materialTypeSize %></td>
                      <td><%= aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].unitMesurment %></td>
                      <td><%= aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].quantity %></td>
                      <td><%= aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].price %></td>
                      <td><%= aggregatedQuantitiesByMaterialAndType[materialName][materialTypeSize].totalPrice %></td>
                    </tr>
                  <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
