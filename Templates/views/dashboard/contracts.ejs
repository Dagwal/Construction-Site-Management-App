    <%- include('./partials/header.ejs') %>
    <div class="container-fluid">
      <div class="row">

        <%- include('./partials/nav.ejs', { currentPageName: 'contract' }) %>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main">
          <form action="http://localhost:3000/api/contracts" method="post" class="insert-form">

            <hr>
            <h1 class="text-center">Add Contracts</h1>

            <hr>

            <div class="input-field">

                <div class="table-responsive">

                    <table class="table table-bordered text-center" id="table_field">

                        <tr>

                            

                            <th>item no.</th>

                            <th>Building Component</th>

                            <th>Item Name</th>

                            <th>Unit</th>

                            <th>Quantity</th>
                            
                            <th>Unit Price</th>

                            <th>Remove</th>

                            <!-- <th>Action</th> -->
                        </tr>

                        <tr>

                            <td><input type="number" class="form-control" name="itemNumber" required></td>

                            <td><input type="text" class="form-control" name="buildingComponent" required></td>

                            <td><input type="text" class="form-control" name="itemName" required></td>

                            <td><input type="text" class="form-control" name="unit" required></td>

                            <td><input type="number" class="form-control" name="quantity" required></td>

                            <td><input type="number" class="form-control" name="unitPrice" required></td>

                            <td><input class="btn btn-danger" name="remove" id="remove" value="Remove" type="button"></td>

                        </tr>

                    </table>

                    <div class="row">

                        <div class="col-12 text-right">

                            <input type="button" name="add" id="add" value="Add" class="btn btn-success">

                        </div>

                        <div class="col-12 m-3">

                            <input type="submit" name="save" id="save" value="Save" class="btn btn-primary btn-block">

                        </div>

                    </div>

                </div>

            </div>

        </form>


          <div class="my-4 w-100" id="myChart" width="900" height="380"></div>

          <h2>Contracts</h2>
          <div class="table-responsive">
            <% if (contractRecords.length > 0 ) { %>
              <table  id="example" class="table table-striped" style="width:100%">
                <thead>
                  <tr>
                    <th>Item Number</th>
                    <th>Building Component</th>
                    <th>Item Name</th>
                    <th>Unit</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% contractRecords.forEach(contract => { %>
                    <tr>
                      <td><%= contract.itemNumber %></td>
                      <td><%= contract.buildingComponent %></td>
                      <td><%= contract.itemName %></td>
                      <td><%= contract.unit %></td>
                      <td><%= contract.quantity %></td>
                      <td><%= contract.unitPrice %></td>
                      <td><%= contract.unitPrice * contract.quantity %></td>
                      <td><a href="contracts/editcontract/<%= contract._id%>" class="btn btn-primary">Edit</a>  <a href="contracts/deletecontract/<%= contract._id%>" class="btn btn-danger">Delete</a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } %>
          </div>
        </main>
      </div>
