      // Add functionality to add the `active` class to the navigation bar
      const navLinks = document.querySelectorAll('.nav-link');
  
      for (const navLink of navLinks) {
        navLink.addEventListener('click', (event) => {
          for (const link of navLinks) {
            link.classList.remove('active');
          }
  
          event.target.classList.add('active');
        });
      }
    </script>
    <script>
      $(document).ready(function() {
        // Calculate the total salary.
        var totalSalary = 0;
        $('#example tbody tr').each(function() {
          totalSalary += Number($(this).find('td:last-child').text());
        });
      
        // Add the total salary to the table.
        $('#example tbody').append('<tr><td></td><td></td><td></td><td></td><td>Total Remaining Work Price:</td><td class="total-salary" colspan="4">' + totalSalary + '</td></tr>');
